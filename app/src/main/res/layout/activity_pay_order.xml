<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include layout="@layout/action_bar_tv"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="支付金额: "
            android:textColor="@color/text_gray"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:text="￥100"
            android:textColor="@color/red_bg"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="支付方式"
        android:textColor="@color/text_gray"
        android:textSize="14sp" />

    <RadioGroup
        android:id="@+id/rb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp"

        >

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:checked="true"
            android:drawablePadding="10dp"
            android:button="@null"
            android:drawableEnd="@drawable/check_selecto_pay_order"
            android:drawableStart="@mipmap/ic_alipay"
            android:text="支付宝"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />

        <View
            style="@style/lin"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"></View>

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:drawableEnd="@drawable/check_selecto_pay_order"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/ic_wechate"
            android:text="微信支付"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />

        <View
            style="@style/lin"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"></View>

        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawablePadding="10dp"
            android:button="@null"
            android:drawableEnd="@drawable/check_selecto_pay_order"
            android:drawableStart="@mipmap/ic_banlace_pay"
            android:text="余额付款"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />

    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_bg"
        android:gravity="center"
        android:padding="15dp"
        android:text="确认支付"
        android:textColor="@color/white"
        android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>
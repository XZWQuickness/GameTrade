<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/img"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_white_gray_line"
        app:placeholderImageScaleType="fitCenter"
        app:progressBarAutoRotateInterval="5000"
        app:progressBarImage="@mipmap/icon_load_default"
        app:progressBarImageScaleType="centerInside"
        app:retryImage="@mipmap/icon_load_default"
        app:retryImageScaleType="centerCrop"
        app:roundingBorderColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/text_gray"
        android:textSize="14sp"
        android:id="@+id/title"
        android:text="1111"></TextView>

</LinearLayout>